<Window x:Class="DocumentArchive.View.Page.Exception.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentArchive.View.Page.Exception"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Ошибка" Height="168.75" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        
        <StackPanel Grid.Row="0">
            <TextBlock>
                <Run Text="Header"/>
            </TextBlock>
        </StackPanel>
        
        <StackPanel Grid.Row="1">
            <TextBlock>
                <Run Text="ErrorInformation"/>
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Button Content="Ок"/>
        </StackPanel>
    </Grid>
</Window>
