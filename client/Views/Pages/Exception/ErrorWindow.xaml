<Window x:Class="DocumentArchive.View.Page.Exception.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentArchive.View.Page.Exception"
        mc:Ignorable="d"
        Title="Уведомление" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="150" Width="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <TextBlock>
                <Run Name="RnHeader" Text="Header"/>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock>
                <Run Name="RnBody" Text="Body"/>
            </TextBlock>
        </StackPanel>
        
        <StackPanel Grid.Row="2">
            <TextBlock>
                <Run Name="RnFooter" Text="Footer"/>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <Button Content="Ок"/>
        </StackPanel>
    </Grid>
</Window>
